@model StockViewModel

@{
    ViewData["Title"] = "Portfolio Details";
}

<div class="panel btn-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <td>Symbol</td>
        <td>Last Price</td>
        <td>Price Change</td>
        <td>Price Change %</td>
        <td>Shares</td>
        <td>Cost Basis</td>
        <td>Market Value</td>
        <td>Day Gain</td>
        <td>Day Gain %</td>
        <td>Total Gain</td>
        <td>Total Gain %</td>
        <td># of Lots</td>
        <td>Notes</td>
    </tr>
    </thead>
    
    @foreach (var stock in Model.Stocks)
    {
        <tr>
            <td>@stock.Symbol</td>
            <td>@stock.LastPrice</td>
            <td>@stock.PriceChange</td>
            <td>@stock.PricePercentChange</td>
            <td>@stock.Shares</td>
            <td>@stock.CostBasis</td>
            <td>@stock.MarketValue</td>
            <td>@stock.DayGainChange</td>
            <td>@stock.DayGainPercentChange</td>
            <td>@stock.TotalGainChange</td>
            <td>@stock.TotalGainPercentChange</td>
            <td>@stock.NumOfLots</td>
            <td>@stock.Notes</td>
        </tr>
    }
</table>
